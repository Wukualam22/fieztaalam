{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ]
    },
    "overrides": [
        {
            "files": [
                "src/**/*.js"
            ]
        }
    ],
    "ignorePatterns": [
        "*.html",
        "webpack.*.js"
    ]    
}